<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNoMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:text="沒有更多了"
        android:textColor="#3f000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="24dp"
        android:layout_height="1dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@id/tvNoMore"
        android:background="#3f000000"
        app:layout_constraintBottom_toBottomOf="@+id/tvNoMore"
        app:layout_constraintRight_toLeftOf="@+id/tvNoMore"
        app:layout_constraintTop_toTopOf="@+id/tvNoMore" />


    <View
        android:layout_width="24dp"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@id/tvNoMore"
        android:background="#3f000000"
        app:layout_constraintBottom_toBottomOf="@+id/tvNoMore"
        app:layout_constraintLeft_toRightOf="@+id/tvNoMore"
        app:layout_constraintTop_toTopOf="@+id/tvNoMore" />

</androidx.constraintlayout.widget.ConstraintLayout>